            <StackPanel Margin="1,0,0,25">
                <Label x:Name="userChat" Content=""/>
            </StackPanel>
            <Rectangle HorizontalAlignment="Center" Height="356" Stroke="Black" Width="788" VerticalAlignment="Top"/>



        </Grid>



    </Grid>
</Window>
