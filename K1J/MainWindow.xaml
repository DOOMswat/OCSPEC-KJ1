        <Grid HorizontalAlignment="Center" Height="381" Margin="0,10,0,0" VerticalAlignment="Top" Width="789">


            <TextBox x:Name="MessageBox" GotFocus="TextBox_GotFocus" HorizontalAlignment="Left" Margin="0,361,0,0" TextWrapping="Wrap" Text="Chat" VerticalAlignment="Top" Width="736" Height="20"/>
